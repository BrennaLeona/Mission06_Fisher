@{
}

<table>
    <thead> <!--Headers-->
        <tr>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Category</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Copied To Plex</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    @foreach (var x in Model)
    {
        <tbody> <!--Data-->
            <tr>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Category.CategoryName</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
            </tr>
        </tbody>
    }
</table>